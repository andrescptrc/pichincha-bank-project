{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/common/components/*"],
      "@atoms": ["./src/common/components/atoms/index"],
      "@schemas": ["./src/common/schemas/index"],
      "@wrappers": ["./src/common/wrappers/index"],
      "@molecules": ["./src/common/components/molecules/index"],
      "@organisms": ["./src/common/components/organisms/index"],
      "@layouts": ["./src/common/components/layouts/index"],
      "@modules/*": ["./src/modules/*"],
      "@routes": ["./src/common/routes/index"],
      "@hooks": ["./src/common/hooks/index"],
      "@constants/*": ["./src/common/constants/*"],
      "@helpers/*": ["./src/common/helpers/*"],
      "@libs/*": ["./src/common/libs/*"],
      "@interfaces/*": ["./src/common/interfaces/*"],
      "@services/*": ["./src/common/services/*"],
      "@api/*": ["./src/common/api/*"],
      "@slices/*": ["./src/common/store/slices/*"],
      "@pages/*": ["./src/pages/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
